<lxs>
    <scene root="ROOT NODE" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0" far="0" angle="0">
            <from x="30" y="5" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient    r="0.2" g="0.2"  b="0.2"  a="1.0" />
        <background r="0.0" g="0.09" b="0.13" a="1.0" />
    </globals>

    <lights>
        <omni id="L1" enabled="1">
            <location x="5.0" y="5.0" z="5.0" w="1.0" />
            <ambient  r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse  r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <omni id="L2" enabled="1">
            <location x="20.0" y="40.0" z="20.0" w="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="default" file="images/default.jpg" />
        <texture id="vidral"  file="images/vidral.jpg" />
        <texture id="trunk"   file="images/trunk-image.jpg" />
        <texture id="rocks"   file="images/rocks.jpg" />
        <texture id="leaves"  file="images/leaves.jpg" />
    </textures>

    <materials>
        <material id="defaultMAT" shininess="10" >
            <emission r="0.2" g="0.3" b="0.4" a="1" />
            <ambient  r="0.2" g="0.3" b="0.4" a="1" />
            <diffuse  r="0.51" g="0.51" b="0.51" a="1" />
            <specular r="0.51" g="0.51" b="0.51" a="1" />
        </material>
        <material id="lightblue-gloss" shininess="10">
            <emission r="0.75" g="1" b="1" a="1.0" />
            <ambient  r="0.0" g="0.51" b="0.8" a="1.0" />
            <diffuse  r="0.8" g="1.0" b="1.0" a="1.0" />
            <specular r="0.8" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="strongred-gloss" shininess="10" >
            <emission r="0.0" g="0.0" b="0.0" a="0" />
            <ambient  r="1.0" g="1.0" b="1.0" a="1" />
            <diffuse  r="0.0" g="0.0" b="0.0" a="0" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
        </material>
        <material id="woodMAT" shininess="2">
            <emission r="0.0" g="0.0" b="0.0" a="1" />
            <ambient  r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse  r="0" g="0" b="0" a="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
        </material>
        <material id="metalMAT" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1" />
            <ambient  r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse  r="0.51" g="0.51" b="0.51" a="1" />
            <specular r="0.51" g="0.51" b="0.51" a="0.51" />
        </material>
    </materials>

    <transformations>
        <!-- SQUEEZE TRANSFS -->
        <transformation id="squeeze_x">
            <scale x="0.1" y="1" z="1" />
        </transformation>
        <transformation id="squeeze_y">
            <scale x="1" y="0.1" z="1" />
        </transformation>
        <transformation id="squeeze_z">
            <scale x="1" y="1" z="0.1" />
        </transformation>
        <transformation id="squeeze_all">
            <scale x="0.1" y="0.1" z="0.1" />
        </transformation>


        <!-- TORUS 1 TRANSF -->
        <transformation id="torus1_setup">
            <scale x="1" y="1" z="1" />
            <rotate axis="x" angle="-90"/>
        </transformation>


        <!-- TORUS 2 TRANSF -->
        <transformation id="torus2_setup">
            <scale x="1" y="1" z="0.9" />
            <rotate axis="y" angle="90"/>
            <rotate axis="x" angle="-30"/>
        </transformation>


        <!-- TORUS 3 TRANSF -->
        <transformation id="torus3_setup">
            <scale x="1" y="1" z="0.9" />
            <rotate axis="y" angle="90"/>
            <rotate axis="x" angle="30"/>
        </transformation>

        <!-- AWAY TRANSFS -->
        <transformation id="T">
            <translate x="0" y="0" z="2" />
            <rotate axis="y" angle="90"/>
        </transformation>
        <transformation id="T1">
            <translate x="0" y="2" z="0" />
        </transformation>
        <transformation id="T2">
            <translate x="3" y="1" z="5" />
        </transformation>
    </transformations>


    <primitives>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="2" y2="2" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="0.8" slices="50" stacks="50"/>
        </primitive>
        <!-- <primitive id="tinysphere">
            <sphere radius="0.15" slices="20" stacks="20"/>
        </primitive> -->
        <primitive id="torus">
            <torus loops="30" slices="60" inner="0.2" outer="3.0"/>
        </primitive>
        <primitive id="cylinder">
            <cylinder slices="20" stacks="10" base="0.2" top="0.4" height="2" />
        </primitive>
    </primitives>



    <components>
        <component id="center-sph">
            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="metalMAT" />
            </materials>
            <texture id="vidral" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>

        <component id="torus1">
            <transformation>
                <transformationref id="torus1_setup" />
            </transformation>
            <materials>
                <material id="lightblue-gloss" />
            </materials>
            <texture id="vidral" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="torus2">
            <transformation>
                <transformationref id="torus2_setup" />
            </transformation>
            <materials>
                <material id="lightblue-gloss" />
            </materials>
            <texture id="vidral" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>
        <component id="torus3">
            <transformation>
                <transformationref id="torus3_setup" />
            </transformation>

            <materials>
                <material id="lightblue-gloss" />
            </materials>

            <texture id="vidral" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="RN-LOGO">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="metalMAT" />
            </materials>
            <texture id="vidral" length_s="1" length_t="1" />
            <children>
                <componentref id="center-sph" />
                <componentref id="torus1" />
                <componentref id="torus2" />
                <componentref id="torus3" />
            </children>
        </component>

        <component id="ROOT NODE">
            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="metalMAT" />
            </materials>
            <texture id="vidral" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        
    </components>
</lxs>