<lxs>
    <scene root="ROOT NODE" axis_length="5"/>
    <views default="FAR">
        <perspective id="FAR" near="0.1" far="500" angle="20">
            <from x="30" y="20" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
        <perspective id="CAM2" near="0.1" far="500" angle="20">
            <from x="8" y="15" z="8" />
            <to x="0" y="0" z="0" />
        </perspective>
        <perspective id="VERY FAR" near="0.1" far="500" angle="20">
            <from x="50" y="20" z="50" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>




    <globals>
        <ambient    r="0.1" g="0.1"  b="0.1"  a="1.0" />
        <background r="0.53" g="0.81"  b="0.92"  a="1.0" />
        <!-- skycolor r="0.53" g="0.81"  b="0.92" -->
    </globals>



    <lights>
        <omni id="L1" enabled="1">
            <location x="5.0" y="5.0" z="5.0" w="1.0" />
            <ambient  r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse  r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <omni id="L2" enabled="1">
            <location x="20.0" y="40.0" z="20.0" w="1.0" />
            <ambient  r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse  r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="1.0" a="1.0" />
        </omni>
        <omni id="L3" enabled="1">
            <location x="5.0" y="20.0" z="-8.0" w="1.0" />
            <ambient  r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse  r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="1.0" a="1.0" />
        </omni>
    </lights>




    <textures>
        <texture id="default"       file="images/default.jpg" />
        <texture id="rickm1"        file="images/rm1.jpg" />
        <texture id="hex"           file="images/hex.jpg" />
        <texture id="vidral"        file="images/vidral.jpg" />
        <texture id="trunk"         file="images/trunk-image.jpg" />
        <texture id="rocks"         file="images/rocks.jpg" />
        <texture id="leaves"        file="images/leaves.jpg" />
        <texture id="lightning"     file="images/lightning.png" />
        <texture id="darkm"         file="images/darkmatter.png" />
        <texture id="matter"        file="images/spherematter.png" />
        <texture id="desk"          file="images/desk.jpg" />
        <texture id="floor"         file="images/floor.jpg" />
        <texture id="digital"       file="images/digital.png" />
        <texture id="sky"           file="images/sky.jpg" />
    </textures>




    <materials>
        <material id="defaultMAT" shininess="10" >
            <emission r="0.0" g="0.0" b="0.0" a="1" />
            <ambient  r="1.0" g="1.0" b="1.0" a="1" />
            <diffuse  r="1.0" g="1.0" b="1.0" a="1" />
            <specular r="1.0" g="1.0" b="1.0" a="1" />
        </material>
        <material id="cyangloss" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1" />
            <ambient  r="0.1" g="1" b="1" a="1.0" />
            <diffuse  r="0.1" g="1" b="1" a="1.0" />
            <specular r="0.1" g="1" b="1" a="1.0" />
        </material>
        <material id="strongred" shininess="10" >
            <emission r="0.0" g="0.0" b="0.0" a="1" />
            <ambient  r="1.0" g="1.0" b="1.0" a="1" />
            <diffuse  r="0.0" g="0.0" b="0.0" a="0" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
        </material>
        <material id="whiteMAT" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1" />
            <ambient  r="1.0" g="1.0" b="1.0" a="1" />
            <diffuse  r="1.0" g="1.0" b="1.0" a="1" />
            <specular r="1.0" g="1.0" b="1.0" a="1" />
        </material>
        <material id="metal" shininess="10">
            <emission r="0.75" g="0.75" b="0.75" a="1" />
            <ambient  r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse  r="0.0" g="0.0" b="0.0" a="1" />
            <specular r="1.0" g="1.0" b="1.0" a="1" />
        </material>
    </materials>





    <transformations>
        <transformation id="ring1_setup">
            <scale x="1" y="1" z="1" />
            <rotate axis="x" angle="-90"/>
        </transformation>
        <transformation id="ring2_setup">
            <scale x="1" y="1" z="0.95" />
            <rotate axis="y" angle="90"/>
            <rotate axis="x" angle="-35"/>
        </transformation>
        <transformation id="ring3_setup">
            <scale x="1" y="1" z="0.9" />
            <rotate axis="y" angle="90"/>
            <rotate axis="x" angle="35"/>
        </transformation>
        <transformation id="tinysphere1_setup">
            <translate x="-1.15" y="1.6" z="0" />
        </transformation>
        <transformation id="tinysphere2_setup">
            <translate x="-0.9" y="-1.3" z="1" />
        </transformation>
        <transformation id="tinysphere3_setup">
            <translate x="1.01" y="0" z="-1.71" />
        </transformation>        
    </transformations>




    <primitives>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="4" y2="4" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="30" stacks="30"/>
        </primitive>
        <primitive id="tinysphere">
            <sphere radius="0.22" slices="20" stacks="20"/>
        </primitive>                
        <primitive id="torus">
            <torus loops="50" slices="50" inner="0.3" outer="3.0"/>
        </primitive>
        <primitive id="ring">
            <torus loops="50" slices="50" inner="0.08" outer="2.0"/>
        </primitive>        
        <primitive id="cylinder">
            <cylinder slices="30" stacks="20" base="1" top="1" height="4" />
        </primitive>
    </primitives>




<components>
        <component id="center_sph">
            <transformation>
                <scale x="0.75" y="0.75" z="0.75"/>
            </transformation>
            <materials>
                <material id="defaultMAT" />
            </materials>
            <texture id="matter" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
        <component id="ring1">
            <transformation>
                <transformationref id="ring1_setup" />
            </transformation>
            <materials>
                <material id="metal" />
            </materials>
            <texture id="none" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="ring" />
            </children>
        </component>
        <component id="ring2">
            <transformation>
                <transformationref id="ring2_setup" />
            </transformation>
            <materials>
                <material id="metal" />
            </materials>
            <texture id="none" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="ring" />
            </children>
        </component>
        <component id="ring3">
            <transformation>
                <transformationref id="ring3_setup" />
            </transformation>
            <materials>
                <material id="metal" />
            </materials>
            <texture id="none" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="ring" />
            </children>
        </component>
        <component id="tinysphere1">
            <transformation>
                <transformationref id="tinysphere1_setup" />
            </transformation>
            <materials>
                <material id="defaultMAT" />
            </materials>
            <texture id="darkm" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="tinysphere" />
            </children>
        </component>
        <component id="tinysphere2">
            <transformation>
                <transformationref id="tinysphere2_setup" />
            </transformation>
            <materials>
                <material id="defaultMAT" />
            </materials>
            <texture id="darkm" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="tinysphere" />
            </children>
        </component>
        <component id="tinysphere3">
            <transformation>
                <transformationref id="tinysphere3_setup" />
            </transformation>
            <materials>
                <material id="defaultMAT" />
            </materials>
            <texture id="darkm" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="tinysphere" />
            </children>
        </component>                

        <!--  -->
        <component id="holder">
            <transformation>
                <scale x="0.1" y="1.2" z="0.1" />
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="cyangloss" />
            </materials>
            <texture id="hex" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>
        <!--  -->

        <component id="rect1">
            <transformation>
                <translate x="-10" y="0" z="-10"/>
                <scale x="5" y="5" z="5"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="4" length_t="4"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="rect2">
            <transformation>
                <translate x="-10" y="0" z="10"/>
                <scale x="5" y="5" z="5"/>
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="4" length_t="4"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="rect3">
            <transformation>
                <translate x="10" y="0" z="-10"/>
                <scale x="5" y="5" z="5"/>
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="4" length_t="4"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="rect4">
            <transformation>
                <translate x="-10" y="20" z="-10"/>
                <scale x="5" y="5" z="5"/>
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="4" length_t="4"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="rect5">
            <transformation>
                <translate x="10" y="0" z="10"/>
                <scale x="5" y="5" z="5"/>
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="0.5" length_t="0.5"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="floor">
            <transformation>
                <translate x="-10" y="0" z="10" />
                <scale x="5" y="5" z="5" />
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="floor" length_s="2" length_t="2" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>



        <component id="ATOM">
            <transformation>
                <scale x="0.5" y="0.5" z="0.5" />
                <translate x="-8" y="2" z="8" />
            </transformation>
            <materials>
                <material id="whiteMAT" />
            </materials>
            <texture id="default" length_s="1" length_t="1" />
            <children>
                <componentref id="center_sph" />
                <componentref id="ring1" />
                <componentref id="ring2" />
                <componentref id="ring3" />
                <componentref id="tinysphere1" />
                <componentref id="tinysphere2" />
                <componentref id="tinysphere3" />
                <componentref id="holder" />
            </children>
        </component>


        <component id="CUBEMAP">
            <transformation>
                <scale x="1" y="0.95" z="1" />
            </transformation>
            <materials>
                <material id="whiteMAT" />
            </materials>
            <texture id="default" length_s="0.5" length_t="0.5" />
            <children>
                <componentref id="rect1" />
                <componentref id="rect2" />
                <componentref id="rect3" />
                <componentref id="rect4" />
                <componentref id="rect5" />
                <componentref id="floor" />
            </children>
        </component>

    

        <component id="ROOT NODE">
            <transformation>
            </transformation>
            <materials>
                <material id="defaultMAT" />
            </materials>
            <texture id="sky" length_s="4" length_t="4" />
            <children>
                <componentref id="ATOM" />
                <componentref id="CUBEMAP" />
            </children>
        </component>
</components>
</lxs>