   <lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>


    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.09" b="0.13" a="1.0" />
    </ambient>


    <lights>
        <omni id="L1" enabled="1">
            <location x="5.0" y="5.0" z="5.0" w="1.0" />
            <ambient  r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse  r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>



    <textures>
        <texture id="vidral" file="scenes/images/vidral.jpg" />
        <texture id="trunk"  file="scenes/images/trunk-image.jpg" />
        <texture id="rocks"  file="scenes/images/rocks.jpg" />
        <texture id="leaves" file="scenes/images/leaves.jpg" />
    </textures>



    <materials>
        <material id="lightblue-gloss" shininess="10">
            <emission r="0.75" g="1" b="1" a="1.0" />
            <ambient  r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse  r="0.8" g="1.0" b="1.0" a="1.0" />
            <specular r="0.8" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>



    <transformations>
    <!-- SQUEEZE TRANSFORM -->
        <transformation id="squeeze_x">
            <scale x="0.1" y="1" z="1" />
        </transformation>
        <transformation id="squeeze_y">
            <scale x="1" y="0.1" z="1" />
        </transformation>
        <transformation id="squeeze_z">
            <scale x="1" y="1" z="0.1" />
        </transformation>
        <transformation id="squeeze_all">
            <scale x="0.1" y="0.1" z="0.1" />
        </transformation>        
    <!-- END SQUEEZE TRANSFORM -->

    
    </transformations>



    <primitives>
    
        <primitive id="rectangle">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="2" slices="100" stacks="100"/>
        </primitive>

        <primitive id="torus">
            <torus loops="100" slices="100" inner="0.6" outer="4.0"/>
        </primitive>

        <primitive id="cylinder">
            <cylinder slices="20" stacks="10" radius="0.6" height="3" />
        </primitive>
    
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="7" z="1" />
                <scale x="9" y="1" z="10" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
    </components>
</lxs> 